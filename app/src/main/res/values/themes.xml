<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BarberShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.BarberShop" parent="Base.Theme.BarberShop" />
    <style name="CustomDatePicker" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textPrimaryColor</item>
        <item name="android:textColorSecondary">@color/textSecondaryColor</item>
    </style>
    <!-- Tema personalizado para o TimePicker -->
    <style name="CustomTimePicker" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Cor de fundo -->
        <item name="android:background">@color/backgroundColor</item>
        <!-- Cor do título (se aplicável) -->
        <item name="colorPrimary">@color/textSecondaryColor</item>
        <item name="colorAccent">@color/backgroundColor</item>
        <item name="android:titleTextStyle">@style/CustomTimePickerTitle</item>
        <!-- Estilo dos números -->
        <item name="android:textColorPrimary">@color/backgroundColor</item>
        <!-- Estilo dos botões (OK/Cancelar) -->
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Estilo do título -->
    <style name="CustomTimePickerTitle">
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo dos botões -->
    <style name="CustomButton">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">50dp</item>
    </style>

    <style name="CardStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="cardBackgroundColor">#1C1C1C</item>
    </style>


</resources>